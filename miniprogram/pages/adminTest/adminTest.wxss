/* miniprogram/pages/adminTest/adminTest.wxss */
page {
  width: 100%;
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
}

.nav {
  height: 80rpx;
  width: 100%;
  text-align: center;
  color: black;
  box-sizing: border-box;
  border-radius: 4%/20%;
  padding: 0 20rpx;
  overflow: hidden;
  line-height: 80rpx;
  font-size: 16px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
 
}

.nav-item {
  width: 20%;
  display: inline-block;
  text-align: center;
}

.nav-item.active {
  border-radius: 16%/20%;
}

.tab-box {
  padding-top: 80rpx;
  height: 100%;
  box-sizing: border-box;
}

.tab-content {
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}

.onecho {
  background-color: #0060c7;
}

.editor {
  background-color: #27b89b;
}

.office {
  background-color: #ff7e26;
}

.media {
  background-color: #ef4971;
}

.workshop {
  background-color: #fd8a2f;
}