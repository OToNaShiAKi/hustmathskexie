/* miniprogram/pages/infoDetail/infoDetail.wxss */
#selfInfor {
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  border-radius: 0.8em;
  width: 700rpx;
  min-height: 80vh;
  background-color: #fff;
  box-shadow: 0 8px 12px #ebedf0;
  margin: 0 auto;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}
.ti{
  color: #586069;
  margin: 0 auto;
  text-align: center;
}

#selfInfor>view {
  display: flex;
  flex-direction: column;
  width: 80%;
  margin: 0 auto;
}

.title {
  font-size: 1.8em;
  font-weight: bold;
  color: rgba(69, 90, 100, 0.6);
  text-align: center;
  margin-bottom: 20rpx;
  margin-top: 20rpx;

}

#selfInfor>view>view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: auto;
}

#selfInfor>view>view view{
  padding-left: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}


.tiaoji{
  font-size: 1.4em;
  margin: 0 auto;
  color: gray;
  padding-bottom: 40rpx;
}

#introduction{
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-left: 30rpx;
}
.introdu{
  font-size: 1.3em;
  margin: 0 auto;
  text-align: center;
  width: auto;
  font-weight: bold;
  color: #fc8a2e;
}

.big{
  font-size: 1.2em;
  height: fit-content;
  width: 60%;
  white-space: pre-wrap;
}

 .will{
  font-size: 1.2em;
}
.will span{
  color: #fc8a2e;
  font-weight: bold;
}
