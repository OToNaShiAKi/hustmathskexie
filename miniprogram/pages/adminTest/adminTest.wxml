<!--miniprogram/pages/adminTest/adminTest.wxml-->
<view class="container">
	<scroll-view scroll-x="true" class="nav" scroll-left="{{navScrollLeft}}" scroll-with-animation="{{true}}"  >
		<block wx:for="{{navData}}" wx:for-index="idx" wx:for-item="navItem" wx:key="idx">
			<view class="nav-item {{(currentTab == idx) ? ('active'+' '+ department):''}}" data-current="{{idx}}" bindtap="switchNav">{{navItem.text}}</view>
		</block>
	</scroll-view>
  <van-divider borderColor="{{buttonColor}}" />
	<swiper class="tab-box" current="{{currentTab}}" duration="300" bindchange="switchTab">
		<swiper-item wx:for="{{[0,1,2]}}" wx:key="index" class="tab-content">
			<showTest testType="{{item}}" department="{{department}}" name="{{name}}" identify="admin" />
		</swiper-item>
	</swiper>

</view>